[user]
    email = lasse.schuirmann@gmail.com
    name = Lasse Schuirmann

[sendemail]
    smtpserver = smtp.gmail.com
    smtpserverport = 587
    smtpencryption = tls
    smtpuser = lasse.schuirmann@gmail.com

[core]
    editor = vim

[alias]
    a = add
    ap = add -p

    ama = am --abort
    amc = am --continue

    b = branch

    bs = bisect start
    bg = bisect good
    bb = bisect bad
    br = bisect reset

    bl = blame

    co = checkout
    con = checkout -b

    cl = clone
    cld = clone --depth

    c = commit -v
    cm = commit --message
    ca = commit -v --all
    cam = commit --all --message
    ce = commit -v --amend
    cem = commit --amend --message
    cea = commit -v --amend --all
    cae = commit -v --amend --all
    ceam = commit --amend --all --message
    ct = commit --all --message tmp
    cet = commit --amend --all --message tmp
    cempty = commit --allow-empty-message -m ''
    caempty = commit --all --allow-empty-message -m ''
    ceempty = commit --amend --allow-empty-message -m ''
    caeempty = commit --all --amend --allow-empty-message -m ''
    ceaempty = commit --all --amend --allow-empty-message -m ''

    cg = config --global
    cge = config --global -e

    cp = cherry-pick

    d = diff
    dh = diff HEAD
    dm = diff master
    ds = diff --staged
    dif = diff # typo

    f = fetch
    fp = format-patch

    g = grep
    gi = grep -i

    i = init

    l = log

    m = checkout master
    mt = mergetool

    p = push
    pl = pull
    pf = push --force
    pu = push -u
    puo = push -u origin

    r = rebase
    ri = rebase --interactive
    rim = rebase --interactive master
    ra = rebase --abort
    rc = rebase --continue
    rm = rebase master

    res = reset
    resh = reset --hard

    s = send-email
    se = send-email
    sh = show # thats Show Head
    st = status
    stat = status
    s-libosinfo = send-email --to=libosinfo@redhat.com

[push]
    default = current
[merge]
    ff = only
